# Server environment configuration template
NODE_ENV=development
HOST=0.0.0.0
PORT=3001

# Frontend / backend origins
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
API_BASE_PATH=/api
# ALLOWED_ORIGINS can be a comma-delimited list. If omitted, the FRONTEND_URL and localhost are allowed by default.
# ALLOWED_ORIGINS=http://localhost:3000,https://staging.mypath.app

# Database
MONGO_URI=replace-with-your-mongodb-connection-string

# Dify service configuration
DIFY_WORKFLOW_URL=https://your-dify-instance/v1/workflows/run
DIFY_CHATFLOW_URL=https://your-dify-instance/v1/chat-messages
DIFY_USER=replace-with-dify-user-id

# Dify API keys
PROFILE_SUMMARY_KEY=
PROFILE_STRENGTHS_KEY=
PROFILE_IMPROVEMENTS_KEY=
COLLEGE_LIST_KEY=
COLLEGE_WHY_KEY=
STRATEGIES_KEY=
SCHEDULE_GENERATION_KEY=
ESSAY_BRAINSTORM_KEY=
ACTIVITIES_IMPROVER_KEY=
COUNSELOR_KEY=
